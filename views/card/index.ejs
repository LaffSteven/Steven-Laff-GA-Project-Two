<!DOCTYPE html>
<html lang="en" dir="ltr">

    <!-- Head -->
    <%- include ('../partials/head.ejs') %>
    <link rel="stylesheet" href="/css/card-index.css">
    <script src=".../scripts/card-index.js" type="text/javascript">

    </script>
    <!-- Head -->

    <body>

        <!-- Header -->
        <%- include ('../partials/header.ejs') %>
        <!-- Header -->

        <h1>List of cards</h1>

        <section class="content-section">
            <div class="card-list-container">
                <ul id="hp-card-list">
                    <% for (let i = 0; i < cards.length; i++) {%>
                        <li> <a href="/card/<%=cards[i]._id%>"><%=cards[i].name%></a> </li>
                    <% } %>
                </ul>
            </div>
            <div class="card-serach-container">
                <div class="card-search-bar">
                    <h3>Card Search</h3>
                    <span class="search-bar">
                        <p>Search by Card Name:</p>
                        <input id="search-name-text" type="text" name="search-card-name" value="">
                        <button id="search-name-button" type="button" name="button">Search</button>
                    </span>
                </div>
                <div id="search-result">
                    <div id="result-img-wrapper">
                        <img src="https://c1.scryfall.com/file/scryfall-cards/large/front/b/1/b125d1e7-5d9b-4997-88b0-71bdfc19c6f2.jpg?1562863790" alt="">
                    </div>
                </div>
                <nav id="new-card-nav">
                    <a href="/card/new"> <button type="button" name="button">Add New Card</button> </a>
                </nav>
            </div>
        </section>

        <!-- Footer -->
        <%- include ('../partials/footer.ejs') %>
        <!-- Footer -->
    </body>
</html>
